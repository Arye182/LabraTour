<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".presentation.ui.home.SubCategoryFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- ******************************* Food Category ********************************* -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!-- 2-buttons row bakery , bar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">
                    <!-- button-->
                    <LinearLayout
                        android:id="@+id/bakery"
                        android:padding="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/category_bg"
                        android:orientation="vertical"
                        style="@style/ShapeAppearance.MaterialComponents.LargeComponent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/labra_asset_5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Headline5"
                            android:text="Bakery"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                    <!-- button-->
                    <LinearLayout
                        android:id="@+id/bar"
                        android:padding="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/category_bg"
                        android:orientation="vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/labra_asset_5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Headline5"
                            android:text="Bar"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 2-buttons row cafe , liqueur-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">
                    <!-- button-->
                    <LinearLayout
                        android:id="@+id/cafe"
                        android:padding="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/category_bg"
                        android:orientation="vertical"
                        style="@style/ShapeAppearance.MaterialComponents.LargeComponent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/labra_asset_5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Headline5"
                            android:text="Cafe"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                    <!-- button-->
                    <LinearLayout
                        android:id="@+id/liquor_store"
                        android:padding="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/category_bg"
                        android:orientation="vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/labra_asset_5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Headline5"
                            android:text="Liquor Store"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>



                <!-- 2-buttons row restaurant , food-->



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">
                    <!-- button-->
                    <LinearLayout
                        android:id="@+id/restaurant"
                        android:padding="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/category_bg"
                        android:orientation="vertical"
                        style="@style/ShapeAppearance.MaterialComponents.LargeComponent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/labra_asset_5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Headline5"
                            android:text="Restaurant"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                    <!-- button-->
                    <LinearLayout
                        android:id="@+id/food"
                        android:padding="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/category_bg"
                        android:orientation="vertical">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/labra_asset_5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Headline5"
                            android:text="Food"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">
                    <!-- button-->
                    <LinearLayout
                        android:id="@+id/supermarket"
                        android:padding="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:background="@drawable/category_bg"
                        android:orientation="vertical"
                        style="@style/ShapeAppearance.MaterialComponents.LargeComponent">
                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/labra_asset_5"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="4dp">
                        </com.google.android.material.imageview.ShapeableImageView>
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Headline5"
                            android:text="SuperMarket"
                            android:layout_gravity="center_horizontal" />
                    </LinearLayout>
                </LinearLayout>







            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


