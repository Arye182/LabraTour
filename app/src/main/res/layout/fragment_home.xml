<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".presentation.ui.home.HomeFragment"
    android:background="@color/backgroundColor">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- location -->
            <include
                android:layout_marginTop="16dp"
                android:id="@+id/location_card"
                layout="@layout/location_card"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <!-- weather -->
            <include
                android:layout_marginTop="16dp"
                android:id="@+id/weather_card"
                layout="@layout/weather_card"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <!-- random pois -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/card">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:text="Places Close To You"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp">
                </com.google.android.material.textview.MaterialTextView>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:padding="8dp"
                        android:clipToPadding="false"
                        android:orientation="horizontal"
                        android:id="@+id/places_close_to_you_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/place_card_small"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>
            </LinearLayout>


            <!-- custom pois -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/card">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:text="Places For You!"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp">
                </com.google.android.material.textview.MaterialTextView>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <include
                            android:id="@+id/card"
                            layout="@layout/place_card_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:layout_editor_absoluteX="8dp" />

                        <include
                            android:id="@+id/card"
                            layout="@layout/place_card_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:layout_editor_absoluteX="8dp" />

                        <include
                            android:id="@+id/card"
                            layout="@layout/place_card_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:layout_editor_absoluteX="8dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- logout button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Logout"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>