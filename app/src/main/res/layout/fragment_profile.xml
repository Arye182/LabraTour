<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/backgroundColor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/card"
                android:elevation="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/TextAppearance.Reply.Headline4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="User Profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="fill_horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextAppearance.Reply.Headline6"                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Name: " />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_first_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Body2"
                            android:text="first name" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="fill_horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextAppearance.Reply.Headline6"                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Name: " />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_last_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Body2"
                            android:text="last name" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="fill_horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextAppearance.Reply.Headline6"                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Use Name: " />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_username_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Body2"
                            android:text="user name" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="fill_horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextAppearance.Reply.Headline6"                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: " />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_email_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Body2"
                            android:text="email" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="fill_horizontal">
                        <com.google.android.material.textview.MaterialTextView
                            style="@style/TextAppearance.Reply.Headline6"                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phone: " />
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_phone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextAppearance.Reply.Body2"
                            android:text="phone" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- custom pois -->
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/card">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Headline5"
                    android:text="Places You Liked"
                    android:layout_marginTop="16dp"
                    android:paddingLeft="16dp"
                    android:paddingBottom="16dp">
                </com.google.android.material.textview.MaterialTextView>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <include
                            android:id="@+id/card"
                            layout="@layout/place_card_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:layout_editor_absoluteX="8dp" />
                        <include
                            android:id="@+id/card"
                            layout="@layout/place_card_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:layout_editor_absoluteX="8dp" />
                        <include
                            android:id="@+id/card"
                            layout="@layout/place_card_small"
                            app:layout_constraintBottom_toBottomOf="parent"
                            tools:layout_editor_absoluteX="8dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- logout button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Logout"
                android:layout_gravity="center"/>

            <!-- logout button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Delete Account!"
                android:layout_gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>