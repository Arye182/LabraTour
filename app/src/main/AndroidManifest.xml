<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.labratour">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.LabraTour">
        <activity android:name=".presentation.ui.login.welcome.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.LabraTour.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.ui.login.LoginActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".presentation.ui.home.HomeActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>